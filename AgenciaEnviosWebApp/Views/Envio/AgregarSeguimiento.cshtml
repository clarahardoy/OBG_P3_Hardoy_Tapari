@model AgregarSeguimientoModel

@{
    ViewData["Title"] = "AgregarSeguimiento";
}

<h1>Agregar Seguimiento</h1>
<h3>Envio con ID: @Model.dtoEnvio.Id</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarSeguimiento">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" value="@Model.dtoEnvio.Id" asp-for="@Model.dtoEnvio.Id"/>

            <textarea asp-for="@Model.dtoAgregarSeguimiento.Seguimiento">

            </textarea>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
